<UserControl x:Class="ImageUtility.DashboardView"
	           xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						 xmlns:suki="https://github.com/kikipoulet/SukiUI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450">
 
	<suki:GlassCard Margin="10" Padding="10">
		<StackPanel Spacing="8">
			<TextBlock Text="Dashboard" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			<TextBlock Text="Welcome to the Dashboard!" FontSize="16" 
								 HorizontalAlignment="Center" 
								 VerticalAlignment="Center"/>
			<TextBlock Text="this is a WIP(work in process)" FontSize="16"
								 HorizontalAlignment="Center"
								 VerticalAlignment="Center"/>
		</StackPanel>
		
		</suki:GlassCard>
</UserControl>

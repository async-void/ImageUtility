<UserControl x:Class="ImageUtility.ResizerView"
	           xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						 xmlns:suki="https://github.com/kikipoulet/SukiUI"
						 xmlns:resizer="clr-namespace:ImageUtility.Features.Resizer;assembly=ImageUtility"
						 xmlns:icon="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d"
             x:DataType="resizer:ResizerViewModel">

	<ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Center"
								>
		<suki:BusyArea IsBusy="{Binding IsBusy}"
									 BusyText="{Binding StatusMessage}">
			<WrapPanel Margin="10" Orientation="Horizontal">
				<Grid>
					<!-- Directories -->
					<suki:GlassCard Margin="10"
													CornerRadius="10"
													Width="600">
						<StackPanel>
							<suki:GroupBox Header="Source/Destination Directories">
								<StackPanel Spacing="5" Margin="10">

									<StackPanel Spacing="10" 
															Orientation="Horizontal" 
														
															HorizontalAlignment="Left">
										<TextBox Text="{Binding SourceDir, UpdateSourceTrigger=PropertyChanged}"
													 Watermark="Source Directory"
													 suki:TextBoxExtensions.Prefix="{icon:MaterialIconExt Kind=Folder}"
													 Classes="clearButton"
													 Width="460"/>
										<Button 
														Background="Transparent"
														BorderBrush="Transparent"
														Cursor="Hand">
											<Button.Content>
												<icon:MaterialIcon Kind="FolderOpen" Width="22" Height="22"/>
											</Button.Content>
										</Button>

									</StackPanel>
									<StackPanel Spacing="10" 
															Orientation="Horizontal"
														
														  HorizontalAlignment="Left">
										<TextBox Text="{Binding DestinationDir, UpdateSourceTrigger=PropertyChanged}"
													 Watermark="Destination Directory"
													 suki:TextBoxExtensions.Prefix="{icon:MaterialIconExt Kind=Folder}"
													 Classes="clearButton"
													 Width="460"/>
										<Button 
														Background="Transparent"
														BorderBrush="Transparent"
														Cursor="Hand">
											<Button.Content>
												<icon:MaterialIcon Kind="FolderOpen" Width="22" Height="22"/>
											</Button.Content>
										</Button>
									</StackPanel>
								</StackPanel>
							</suki:GroupBox>
							<!-- End Directiories -->
							

						
						</StackPanel>
					</suki:GlassCard>
				</Grid>
				<suki:GlassCard CornerRadius="8"
												Margin="10">
					<!-- Options -->

					<suki:GroupBox Header="Options">
						<StackPanel Spacing="10" 
												>
							<suki:BusyArea IsBusy="{Binding IsLoading}"
														 BusyText="{Binding StatusMessage}">
								<suki:GlassCard CornerRadius="8" 
																
																Width="600">
									<StackPanel>
										<Grid>
											<ComboBox HorizontalAlignment="Right"
																VerticalAlignment="Center"
																Width="200"
																ItemsSource="{Binding ResizeModes}"
																SelectedItem="{Binding SelectedResizeMode, UpdateSourceTrigger=PropertyChanged}"
																Margin="10 0 0 0"
																ToolTip.Placement="Right"
																ToolTip.Tip="Resizer Mode"/>
											<StackPanel>
												<TextBlock HorizontalAlignment="Left"
																	 VerticalAlignment="Top"
																	 FontWeight="DemiBold"
																	 Text="Resize Mode" />
												<TextBlock HorizontalAlignment="Left"
																	 VerticalAlignment="Top"
																	 FontWeight="Thin"
																	 FontSize="12"
																	 Text="Select the resize mode to use." />
											</StackPanel>
										</Grid>
										<Grid>
											<NumericUpDown suki:NumericUpDownExtensions.Unit="{icon:MaterialIconExt Kind=NumericOneCircle}"
																		 HorizontalAlignment="Right"
																		 VerticalAlignment="Center"
																		 FormatString="F0"
																		 Minimum="64"
																		 Maximum="640"
																		 Value="64"
																		 Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}"
																		 Margin="0 5 5 0"/>
											<StackPanel>
												<TextBlock HorizontalAlignment="Left"
																	 VerticalAlignment="Top"
																	 FontWeight="DemiBold"
																	 Text="Width" />
												<TextBlock HorizontalAlignment="Left"
																	 VerticalAlignment="Top"
																	 FontWeight="Thin"
																	 FontSize="12"
																	 Text="Set the width for the resized image." />
											</StackPanel>
										</Grid>
										<Grid Margin="0 10 0 10">
											<NumericUpDown suki:NumericUpDownExtensions.Unit="{icon:MaterialIconExt Kind=NumericOneCircle}"
																		 HorizontalAlignment="Right"
																		 VerticalAlignment="Center"
																		 FormatString="F0"
																		 Minimum="64"
																		 Maximum="640"
																		 Margin="0 0 5 0"
																		 Value="64"
																		 Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" />
											<StackPanel>
												<TextBlock HorizontalAlignment="Left"
																	 VerticalAlignment="Top"
																	 FontWeight="DemiBold"
																	 Text="Height" />
												<TextBlock HorizontalAlignment="Left"
																	 VerticalAlignment="Top"
																	 FontWeight="Thin"
																	 FontSize="12"
																	 Text="Set the height for the resized image." />
											</StackPanel>
										</Grid>
										<Grid Margin="0,2,0,20">
											<ToggleSwitch HorizontalAlignment="Right"
																		VerticalAlignment="Top"
																		Classes="Switch"
																		IsChecked="{Binding MaintainAspectRatio}" />
											<TextBlock HorizontalAlignment="Left"
																	VerticalAlignment="Top"
																	FontWeight="DemiBold"
																	Text="Maintain Aspect Ratio" />

											<TextBlock Margin="0,16,0,0"
																 HorizontalAlignment="Left"
																 VerticalAlignment="Bottom"
																 FontSize="12"
																 Foreground="{DynamicResource SukiLowText}"
																 Text="maintain the aspect ratio of the original file."
																 TextWrapping="Wrap" />
										</Grid>
										
									</StackPanel>
								</suki:GlassCard>
								
							</suki:BusyArea>
							<!-- Commands -->
							<Grid Margin="0 -30 0 0"
										Width="300">
								<Button Grid.Column="1"
									Command="{Binding ResizeCommand}"
												HorizontalAlignment="Left"
												VerticalAlignment="Bottom"
												Classes="Flat Rounded"
												Content="APPLY"
												Padding="6"
												Height="40"
												Width="140"
												IsEnabled="{Binding CanResize}"/>
								<Button Grid.Column="1"
												Command="{Binding ClearCommand}"
												HorizontalAlignment="Right"
												VerticalAlignment="Bottom"
												Classes="Flat Rounded Danger"
												Content="CLEAR"
												Padding="6"
												Height="40"
												Width="140"
												IsEnabled="{Binding CanClear}"/>
							</Grid>
							<!-- End Commands -->
						</StackPanel>
					</suki:GroupBox>
					<!--End Options-->
					
				</suki:GlassCard>
			</WrapPanel>
		</suki:BusyArea>
	</ScrollViewer>
 
</UserControl>
